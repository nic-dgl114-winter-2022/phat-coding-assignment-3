<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/property_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/market_image"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            android:src="@drawable/market"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/market_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/market"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/market_image"
            app:layout_constraintStart_toStartOf="@+id/market_image"
            app:layout_constraintTop_toBottomOf="@+id/market_image" />

        <ImageView
            android:id="@+id/inventory_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            android:src="@drawable/inventory"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/inventory_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/inventory"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/inventory_image"
            app:layout_constraintStart_toStartOf="@+id/inventory_image"
            app:layout_constraintTop_toBottomOf="@+id/inventory_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/green_land_1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:src="@drawable/green_land"
        app:layout_constraintBottom_toBottomOf="@id/green_land_2"
        app:layout_constraintEnd_toStartOf="@id/green_land_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/green_land_2" />

    <!--    Land with fruit -->
    <ImageView
        android:id="@+id/green_land_2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:src="@drawable/green_land"
        app:layout_constraintBottom_toTopOf="@id/green_land_5"
        app:layout_constraintEnd_toEndOf="@+id/green_land_5"
        app:layout_constraintStart_toStartOf="@id/green_land_5" />

    <ImageView
        android:id="@+id/fruit_image_land_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/apple"
        app:layout_constraintEnd_toEndOf="@+id/green_land_5"
        app:layout_constraintStart_toStartOf="@id/green_land_5"
        app:layout_constraintTop_toTopOf="@+id/green_land_2" />

    <TextView
        android:id="@+id/fruit_quantity_land_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="3"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/fruit_image_land_2"
        app:layout_constraintStart_toStartOf="@id/fruit_image_land_2"
        app:layout_constraintTop_toBottomOf="@+id/fruit_image_land_2" />

    <!--    End Land with fruit -->

    <ImageView
        android:id="@+id/green_land_3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:src="@drawable/green_land"
        app:layout_constraintBottom_toTopOf="@id/green_land_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/green_land_2" />

    <ImageView
        android:id="@+id/green_land_4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:src="@drawable/green_land"
        app:layout_constraintBottom_toBottomOf="@+id/green_land_5"
        app:layout_constraintEnd_toStartOf="@+id/green_land_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/green_land_5" />

    <!--    Soil-->

    <ImageView
        android:id="@+id/green_land_5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:src="@drawable/soil_land"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/property_layout" />

    <ImageView
        android:id="@+id/fruit_image_land_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/apple"
        app:layout_constraintEnd_toEndOf="@+id/green_land_5"
        app:layout_constraintStart_toStartOf="@id/green_land_5"
        app:layout_constraintTop_toTopOf="@+id/green_land_5" />

    <ImageView
        android:id="@+id/green_land_6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:src="@drawable/green_land"
        app:layout_constraintBottom_toBottomOf="@id/green_land_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/green_land_5"
        app:layout_constraintTop_toTopOf="@id/green_land_5" />

    <ImageView
        android:id="@+id/green_land_7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:src="@drawable/green_land"
        app:layout_constraintEnd_toStartOf="@id/green_land_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/green_land_4"

        />

    <ImageView
        android:id="@+id/green_land_8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:src="@drawable/green_land"
        app:layout_constraintEnd_toEndOf="@id/green_land_5"
        app:layout_constraintStart_toStartOf="@id/green_land_5"
        app:layout_constraintTop_toBottomOf="@id/green_land_5" />

    <ImageView
        android:id="@+id/green_land_9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:src="@drawable/green_land"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/green_land_8"
        app:layout_constraintTop_toBottomOf="@id/green_land_6" />



</androidx.constraintlayout.widget.ConstraintLayout>