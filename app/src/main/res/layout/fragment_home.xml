    <TextView
        android:id="@+id/lemon_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="3"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/lemon_image"
        app:layout_constraintStart_toStartOf="@id/lemon_image"
        app:layout_constraintTop_toBottomOf="@+id/lemon_image" />

    <!-- Orange -->
    <ImageView
        android:id="@+id/land_4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:src="@drawable/green_land"
        app:layout_constraintBottom_toBottomOf="@+id/land_5"
        app:layout_constraintEnd_toStartOf="@+id/land_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/land_5" />

    <ImageView
        android:id="@+id/orange_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/orange"
        app:layout_constraintEnd_toEndOf="@+id/land_4"
        app:layout_constraintStart_toStartOf="@id/land_4"
        app:layout_constraintTop_toTopOf="@+id/land_4" />

    <TextView
        android:id="@+id/orange_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="3"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/orange_image"
        app:layout_constraintStart_toStartOf="@id/orange_image"
        app:layout_constraintTop_toBottomOf="@+id/orange_image" />


    <!-- Mango-->
    <ImageView
        android:id="@+id/land_5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:src="@drawable/soil_land"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/property_layout" />

    <ImageView
        android:id="@+id/mango_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/mango"
        app:layout_constraintEnd_toEndOf="@+id/land_5"
        app:layout_constraintStart_toStartOf="@id/land_5"
        app:layout_constraintTop_toTopOf="@+id/land_5" />

    <TextView
        android:id="@+id/mango_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="3"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/mango_image"
        app:layout_constraintStart_toStartOf="@id/mango_image"
        app:layout_constraintTop_toBottomOf="@+id/mango_image" />

    <!-- Coconut -->
    <ImageView
        android:id="@+id/land_6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:src="@drawable/green_land"
        app:layout_constraintBottom_toBottomOf="@id/land_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/land_5"
        app:layout_constraintTop_toTopOf="@id/land_5" />

    <ImageView
        android:id="@+id/coconut_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/coconut"
        app:layout_constraintEnd_toEndOf="@+id/land_6"
        app:layout_constraintStart_toStartOf="@id/land_6"
