<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/property_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/market_image"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            android:src="@drawable/market"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/market_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/market"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/market_image"
            app:layout_constraintStart_toStartOf="@+id/market_image"
            app:layout_constraintTop_toBottomOf="@+id/market_image" />

        <ImageView
            android:id="@+id/inventory_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            android:src="@drawable/inventory"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/inventory_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/inventory"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/inventory_image"
            app:layout_constraintStart_toStartOf="@+id/inventory_image"
            app:layout_constraintTop_toBottomOf="@+id/inventory_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--  Lands  -->

    <!-- Strawberry -->
    <ImageView
        android:id="@+id/land_1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:src="@drawable/green_land"
        app:layout_constraintBottom_toBottomOf="@id/land_2"
        app:layout_constraintEnd_toStartOf="@id/land_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/land_2" />

    <ImageView
        android:id="@+id/strawberry_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/strawberry"
        app:layout_constraintEnd_toEndOf="@+id/land_1"
        app:layout_constraintStart_toStartOf="@id/land_1"
        app:layout_constraintTop_toTopOf="@+id/land_1" />

    <TextView
        android:id="@+id/strawberry_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="6"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/strawberry_image"
        app:layout_constraintStart_toStartOf="@id/strawberry_image"
        app:layout_constraintTop_toBottomOf="@+id/strawberry_image" />


    <!-- Apple -->
    <ImageView
        android:id="@+id/land_2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:src="@drawable/green_land"
        app:layout_constraintBottom_toTopOf="@id/land_5"
        app:layout_constraintEnd_toEndOf="@+id/land_5"
        app:layout_constraintStart_toStartOf="@id/land_5" />

    <ImageView
        android:id="@+id/apple_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/apple"
        app:layout_constraintEnd_toEndOf="@+id/land_5"
        app:layout_constraintStart_toStartOf="@id/land_5"
        app:layout_constraintTop_toTopOf="@+id/land_2" />

    <TextView
        android:id="@+id/apple_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="3"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/apple_image"
        app:layout_constraintStart_toStartOf="@id/apple_image"
        app:layout_constraintTop_toBottomOf="@+id/apple_image" />

    <!-- Lemon -->
    <ImageView
        android:id="@+id/land_3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:src="@drawable/green_land"
        app:layout_constraintBottom_toTopOf="@id/land_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/land_2" />

    <ImageView
        android:id="@+id/lemon_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
