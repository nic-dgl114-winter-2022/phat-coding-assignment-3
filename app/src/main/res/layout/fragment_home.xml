        app:layout_constraintStart_toEndOf="@id/land_8"
        app:layout_constraintTop_toBottomOf="@id/land_6" />

    <ImageView
        android:id="@+id/purple_grape_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/purple_grape"
        app:layout_constraintEnd_toEndOf="@+id/land_9"
        app:layout_constraintStart_toStartOf="@id/land_9"
        app:layout_constraintTop_toTopOf="@+id/land_9" />

    <TextView
        android:id="@+id/purple_grape_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="3"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/purple_grape_image"
        app:layout_constraintStart_toStartOf="@id/purple_grape_image"
        app:layout_constraintTop_toBottomOf="@+id/purple_grape_image" />

</androidx.constraintlayout.widget.ConstraintLayout>