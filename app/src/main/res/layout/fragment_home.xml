<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/property_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/factory_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            android:src="@drawable/factory" />

        <TextView
            android:id="@+id/factory_title"
            app:layout_constraintEnd_toEndOf="@id/factory_image"
            app:layout_constraintStart_toStartOf="@+id/factory_image"
            app:layout_constraintTop_toBottomOf="@+id/factory_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/factory"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/inventory_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            android:src="@drawable/inventory" />

        <TextView
            android:id="@+id/inventory_title"
            app:layout_constraintEnd_toEndOf="@id/inventory_image"
            app:layout_constraintStart_toStartOf="@+id/inventory_image"
            app:layout_constraintTop_toBottomOf="@+id/inventory_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/inventory"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="@color/white" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--    Select land-->

    <ImageView
        android:id="@+id/green_land_1"
        app:layout_constraintBottom_toBottomOf="@id/green_land_2"
        app:layout_constraintEnd_toStartOf="@id/green_land_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/green_land_2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:src="@drawable/green_land" />

    <ImageView
        android:id="@+id/select_land_1"
        app:layout_constraintBottom_toBottomOf="@id/green_land_2"
        app:layout_constraintEnd_toStartOf="@id/green_land_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/green_land_2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        android:src="@drawable/select_land" />
    <!--    End Select land-->

    <!--    Land with fruit -->
    <ImageView
        android:id="@+id/green_land_2"
        app:layout_constraintBottom_toTopOf="@id/green_land_5"
        app:layout_constraintEnd_toEndOf="@+id/green_land_5"
        app:layout_constraintStart_toStartOf="@id/green_land_5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:src="@drawable/green_land" />

    <ImageView
        android:id="@+id/fruit_image_land_2"
        app:layout_constraintEnd_toEndOf="@+id/green_land_5"
        app:layout_constraintStart_toStartOf="@id/green_land_5"
        app:layout_constraintTop_toTopOf="@+id/green_land_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/apple" />

    <TextView
        android:id="@+id/fruit_quantity_land_2"
        app:layout_constraintEnd_toEndOf="@+id/fruit_image_land_2"
        app:layout_constraintStart_toStartOf="@id/fruit_image_land_2"
        app:layout_constraintTop_toBottomOf="@+id/fruit_image_land_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="3"
        android:textColor="@color/white" />

    <!--    End Land with fruit -->

    <ImageView
        android:id="@+id/green_land_3"
        app:layout_constraintBottom_toTopOf="@id/green_land_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/green_land_2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:src="@drawable/green_land" />

    <ImageView
        android:id="@+id/green_land_4"
        app:layout_constraintBottom_toBottomOf="@+id/green_land_5"
        app:layout_constraintEnd_toStartOf="@+id/green_land_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/green_land_5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:src="@drawable/green_land" />

    <!--    Soil-->

    <ImageView
        android:id="@+id/green_land_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/property_layout"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:src="@drawable/soil_land" />

    <ImageView
        android:id="@+id/green_land_6"
        app:layout_constraintBottom_toBottomOf="@id/green_land_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/green_land_5"
        app:layout_constraintTop_toTopOf="@id/green_land_5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:src="@drawable/green_land" />

    <ImageView
        android:id="@+id/green_land_7"
        app:layout_constraintEnd_toStartOf="@id/green_land_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/green_land_4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:src="@drawable/green_land"

        />

    <ImageView
        android:id="@+id/green_land_8"
        app:layout_constraintEnd_toEndOf="@id/green_land_5"
        app:layout_constraintStart_toStartOf="@id/green_land_5"
        app:layout_constraintTop_toBottomOf="@id/green_land_5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:src="@drawable/green_land" />

    <ImageView
        android:id="@+id/green_land_9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/green_land_8"
        app:layout_constraintTop_toBottomOf="@id/green_land_6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:src="@drawable/green_land" />

    <!-- Money -->
    <ImageView
        android:id="@+id/money_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#FFEE58"
        android:backgroundTint="#FFCA28"
        android:src="@drawable/ic_baseline_monetization_on_24"
        app:layout_constraintBottom_toBottomOf="@+id/money_amount"
        app:layout_constraintEnd_toStartOf="@+id/money_amount"
        app:layout_constraintTop_toTopOf="@+id/money_amount" />

    <TextView
        android:id="@+id/money_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="1000"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>