    <TextView
        android:id="@+id/coconut_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="3"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/coconut_image"
        app:layout_constraintStart_toStartOf="@id/coconut_image"
        app:layout_constraintTop_toBottomOf="@+id/coconut_image" />

    <!--Cherry-->
    <ImageView
        android:id="@+id/land_7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:src="@drawable/green_land"
        app:layout_constraintEnd_toStartOf="@id/land_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/land_4"
        />

    <ImageView
        android:id="@+id/cherry_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/cherry"
        app:layout_constraintEnd_toEndOf="@+id/land_7"
        app:layout_constraintStart_toStartOf="@id/land_7"
        app:layout_constraintTop_toTopOf="@+id/land_7" />

    <TextView
        android:id="@+id/cherry_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="3"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/cherry_image"
        app:layout_constraintStart_toStartOf="@id/cherry_image"
        app:layout_constraintTop_toBottomOf="@+id/cherry_image" />

    <!--Green Grape-->
    <ImageView
        android:id="@+id/land_8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:src="@drawable/green_land"
        app:layout_constraintEnd_toEndOf="@id/land_5"
        app:layout_constraintStart_toStartOf="@id/land_5"
        app:layout_constraintTop_toBottomOf="@id/land_5" />

    <ImageView
        android:id="@+id/green_grape_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/green_grape"
        app:layout_constraintEnd_toEndOf="@+id/land_8"
        app:layout_constraintStart_toStartOf="@id/land_8"
        app:layout_constraintTop_toTopOf="@+id/land_8" />

    <TextView
        android:id="@+id/green_grape_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="3"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/green_grape_image"
        app:layout_constraintStart_toStartOf="@id/green_grape_image"
        app:layout_constraintTop_toBottomOf="@+id/green_grape_image" />

    <!--Purple grape-->
    <ImageView
        android:id="@+id/land_9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:src="@drawable/green_land"
